entrypoint = "main.sh"
modules = ["bash"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["bash", "main.sh"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "System Monitor"

[[workflows.workflow]]
name = "System Monitor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./system_monitor.sh -v"

[workflows.workflow.metadata]
outputType = "console"
